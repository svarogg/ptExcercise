<?xml version="1.0" encoding="UTF-8" ?>
 <layer-list xmlns:android="http://schemas.android.com/apk/res/android">
	<item> 
		<shape android:shape="rectangle">
		  <solid android:color="#26a0da" /> 
		</shape>
	</item>   
	<item android:left="0.75dp" android:right="0.75dp"  android:top="0.75dp" android:bottom="0.75dp" >  
		<shape android:shape="rectangle"> 
			<solid android:color="#FFFFFF" />
		</shape>
	</item>    
	<item>
		<rotate
        android:fromDegrees="-45"
        android:toDegrees="0"
        android:pivotX="150%"
        android:pivotY="20%" >
        <shape android:shape="rectangle" android:width="3dp" android:height="3dp" android:bottom="2dp" android:right="2dp" >            
        	<solid android:color="#26a0da" />
        </shape>
    </rotate>
	</item>
 </layer-list>